<?xml version="1.0"?>
<parameters>

    <!-- Connection details -->
    <dbtype>mysql</dbtype>
    <driver>com.mysql.jdbc.Driver</driver>
    <DBUrl>jdbc:mysql://localhost:3306/resourcestresser</DBUrl>
    <username>root</username>
    <password></password>
    <isolation>TRANSACTION_SERIALIZABLE</isolation>

    <!-- The workload -->   
    <terminals>2</terminals>    
    <works>
        <work>
            <time>300</time>
            <rate>10000</rate>
            <weights>20,20,20,0,20,20</weights>
        </work>
    </works>

    <!-- Settings for the different resource stressers -->
    <cpuMandelbrotRecursiveDepth>10</cpuMandelbrotRecursiveDepth>
    <cpuMD5RecursiveDepth>10</cpuMD5RecursiveDepth>
    <ioBinarySizekB>1</ioBinarySizekB>
    
    <!-- R/S Procedures declaration -->
    <transactiontypes>
        <transactiontype>
            <name>CPUMandelbrot</name>
        </transactiontype>
        <transactiontype>
            <name>CPUMD5</name>
        </transactiontype>
        <transactiontype>
            <name>IOInt</name>
        </transactiontype>
        <transactiontype>
            <name>IOIntExponential</name>
        </transactiontype>
        <transactiontype>
            <name>IOBinary</name>
        </transactiontype>
        <transactiontype>
            <name>IOBlob</name>
        </transactiontype>
    </transactiontypes>

</parameters>
